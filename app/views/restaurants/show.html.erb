<div>
  <h1><%= @restaurant.name %></h1>
</div>

<div>
  <ul>
    <li><%= "Address: #{@restaurant.address}" %></li>
    <li><%= "Phone Number: #{@restaurant.phone_number}" %></li>
    <li><%= "Category: #{@restaurant.category}" %></li>
  </ul>
</div>

<h3>Reviews</h3>
<br>
<div>
    <% @restaurant.reviews.each do |review| %>
      <div>
        <p><%= review.content  %></p>
        <p><%= "⭐️" * review.rating %></p>
      </div>
      <hr>
    <% end %>
</div>

<div>
  <%= link_to "Create new Review", new_restaurant_review_path(@restaurant), class: "btn btn-primary" %>
  <br>
  <br>
  <%= link_to "Back to Restaurants", restaurants_path, class: "btn btn-primary" %>
</div>
